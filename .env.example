# Variabili d'ambiente per MCP Server
# Copia questo file in .env e compila con le tue chiavi API

# OpenRouter API Key (obbligatoria per OpenRouter)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Gemini API Key (obbligatoria per Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# Configurazioni opzionali del server
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
MCP_SERVER_DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Timeout per le richieste AI (secondi)
REQUEST_TIMEOUT=30

# Max token per le risposte
MAX_TOKENS=4000

# Temperatura default per la generazione
DEFAULT_TEMPERATURE=0.7

# Sistema memoria conversazioni
CONVERSATION_MEMORY_LIMIT=30
DEFAULT_USER_ID=default